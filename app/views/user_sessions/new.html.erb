<% content_for(:title, t('.title')) %>
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-light text-body-emphasis lh-1 mb-3 title">インパ</h1>
                <p class="col-lg-10 fs-4">「インパ」とは、Dオタ用語で「パークに入ること」を意味します。その逆で、パークから出ることを「アウパ」と言います。</p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">
            <%= form_with url: login_path, class: "p-4 p-md-5 border rounded-3 bg-body-tertiary" do |f| %>
                <div class="mb-3">
                    <%= f.label :email, User.human_attribute_name(:email)  %>
                    <%= f.text_field :email, class: 'form-control' %>
                </div>
                <div class="mb-3">
                    <%= f.label :password, User.human_attribute_name(:password)  %>
                    <%= f.password_field :password, class: 'form-control' %>
                </div></br>
                <div class="actions">
                    <%= f.submit 'インパ', class: 'btn btn-primary', style: "background-color: rgb(242, 63, 143);border-color: rgb(242, 63, 143);" %>
                </div><br />
                <div class="action">
                    <%= link_to auth_at_provider_path(provider: :twitter), class: 'btn btn-info twitter' do %>
                        <i class="fab fa-twitter"></i> Twitterでログイン
                    <% end %>
                </div>
            <% end %><br />
            <%= link_to 'パスワードを忘れた方はこちら', new_password_reset_path %>
        </div>
    </div>
</div>