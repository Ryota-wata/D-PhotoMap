<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="m-5 text-center title fw-light"><%= t'.title' %></h1>
      <table class="table">
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:username)) %></th>
          <td><%= current_user.username %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
          <td><%= current_user.email %></td>
        </tr>
      </table>
      <div>
        <%= link_to '編集', edit_profile_path, class: 'btn btn-success float-right' %>
        <%= link_to '退会', profile_path, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger float-right mr-3' %>
      </div></br>
    </div>
  </div>
</div></br>
