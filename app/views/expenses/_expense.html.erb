<div class="col-sm-12 col-md-6 col-lg-4 mb-3">
  <div id="expense-id-<%= expense.id %>">
    <div class="card mb-4 rounded-3 shadow-sm">
      <div class="card-header py-3"">
        <h4 class="my-0 fw-normal">
          <li class="list-inline-item">
            <%= icon 'far', 'calendar-alt' %>
            <%= l expense.day, format: :long %>
          </li>
        </h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">
          <li class="list-inline-item">
            <%= icon 'fas', 'yen-sign' %>
            <%= number_with_delimiter(expense.total) %>円
          </li>
          <small class="text-body-secondary">/ 日</small>
        </h1>
      </div>
      <div class='btn-group px-3 pb-3 d-flex justify-content-end'>
        <%= link_to expense_path(expense), id: "button-edit-#{expense.id}" do %>
          <button type="button" class="btn btn-sm btn-outline-secondary">詳細</button>
        <% end %>

        <%= link_to edit_expense_path(expense), id: "button-edit-#{expense.id}" do %>
          <button type="button" class="btn btn-sm btn-outline-secondary">編集</button>
        <% end %>

        <%= link_to expense_path(expense), id: "button-delete-#{expense.id}", method: :delete, data: { confirm: t('.confirm') } do %>
          <button type="button" class="btn btn-sm btn-outline-secondary">削除</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
