<%= form_with model: @photo, local: true do |f| %>  
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
        <%= f.label :day %>
        <%= f.date_field :day, class: 'form-control', type: 'date' %>
    </div></br>
    <div class="form-group">
        <%= f.label :park %>
        <%= f.select :park, [['ディズニーランド'], ['ディズニーシー']], {}, class: 'form-control', id: 'park-select' %>
    </div></br>
    <div class="form-group">
        <%= f.label :area %>
        <%= f.text_field :area, class: 'form-control'%>
    </div></br>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control' %>
    </div></br>
    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: 'form-control' %>
    </div></br>
    
    <div class="form-group">
        <%= f.hidden_field :latitude, id: :photo_latitude %>
        <%= f.hidden_field :longitude, id: :photo_longitude %>
    </div></br>

    <div id="map" style="height: 500px; width: 800px;"></div>
    <p>※ピンが上手く立たない場合は、リロードしてください。</p></br>

    <div class="actions">
        <%= f.submit class: 'btn btn-primary' %>
    </div>
<% end %>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google_maps_api_key %>&callback=initMap"></script>


